section.mobile_menu
	@media all and (min-width: $desktop)
		display none
	position fixed
	width 100%
	height 100%
	background-color #d7d7d7
	overflow auto
	top 0
	right 0
	transition: 0.5s cubic-bezier(1, -0.01, 0.07, 1.03)
	font-size: 130%;
	transform translate(100%, 0)
	z-index: 20;
	&.mobile_menu-active
		transform translate(0%, 0)
		
	.container
		flex-flow: row wrap;
		padding $overpadding
		align-content: space-between;
		height: 100%;
		padding 30px
		.location
			display: flex;
			flex: 1 1 100%;
			text-align: center;
			align-items: center;
			cursor pointer
			top 9px
			img
				margin: 0 5px 0 0
				width: .3rem;
				height: .3rem;
			span
				font-size: 13px
				font-weight: 500;

			&:hover
				span
					color $specialRed
		.mobile_menu_list
			padding 0
			margin 1rem 0
			flex: 1 1 60%;
			li
				font-weight: 700;
				line-height: 120%;
		.mobile_menu_feedback
			padding 0
			flex: 1 1 100%;
			order: 2;
			
			li.feedback_container
				font-weight: 700;
				line-height: 120%;
				text-align: center;
				display: flex;
				.inner
					display flex
					align-items center
					img
						width: 0.7rem;
						height: 0.7rem;
						margin: auto 0.4rem auto 0;
				&:hover
					cursor pointer

		.mobile_social_list
			padding 0
			margin 1rem 0
			min-width: 150px;
			li
				font-weight: 600;
				line-height: 150%;
		